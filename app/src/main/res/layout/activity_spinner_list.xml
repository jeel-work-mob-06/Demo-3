<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    tools:context=".SpinnerListActivity">

    <Spinner
        android:background="@color/yellow"
        android:popupBackground="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/spinner"/>

    <!--<ListView
        android:dividerHeight="@dimen/_1sdp"
        android:divider="@color/yellow"
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->

    <AutoCompleteTextView
        android:layout_marginTop="@dimen/_2sdp"
        android:hint="Search Country"
        android:id="@+id/auto_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <MultiAutoCompleteTextView
        android:id="@+id/multi_txt"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Multiple Country"/>
    <GridView
        android:numColumns="3"
        android:id="@+id/gd_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>